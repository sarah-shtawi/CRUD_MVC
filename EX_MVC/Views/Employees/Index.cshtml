@model IEnumerable<Employee> 
@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Employees" asp-action="Create" class="btn btn-success"> Create Employee </a>
<h1 class="mt-4">All Employees </h1>
<table class="table">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Id)</td>
            <td>@Html.DisplayNameFor(model => model.Name)</td>
            <td>@Html.DisplayNameFor(model => model.Email)</td>
            <td>@Html.DisplayNameFor(model => model.Password)</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td> 
                <a asp-controller="Employees" asp-action="Delete" asp-route-id="@item.Id"
                      class="btn btn-danger"> Delete </a> 

                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@item.Id"
                   class="btn btn-info"> Update </a>
                </td>
            </tr>
        }
    </tbody>
</table>
